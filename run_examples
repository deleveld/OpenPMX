#!/bin/sh
set -ex

UNAME="$(uname -s)"
PLATFORM="${3:-${UNAME}}"
if [ "${PLATFORM}" = "Linux" ]; then
	BINARY="a.out"
elif [[ "${PLATFORM}" =~ MINGW64_NT-* ]]; then
	BINARY="a.exe"
fi

# ./install pthread static

